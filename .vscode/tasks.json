{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"command": "cargo",
			"args": ["build"],
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"focus": true,
				"showReuseMessage": true,
				"clear": true
			},
			"label": "rust: cargo build"
		},
		{
			"type": "shell",
			"command": "cargo",
			"args": ["test"],
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"focus": true,
				"showReuseMessage": true,
				"clear": true
			},
			"label": "rust: cargo test"
		}
	]
}