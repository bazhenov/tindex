WHITESPACE = _{ " " }

ALPHA = { 'a'..'z' | 'A'..'Z' }
DIGIT = { '0'..'9' }
OP = { "&" | "|" | "-" }

ident = @{ ALPHA ~ (ALPHA | DIGIT)* }

intersect = { ident ~ "&" ~ ident }
merge = { ident ~ "|" ~ ident }
exclude = { ident ~ "-" ~ ident }

expression = { ("(" ~ expression ~ ")" | ident) ~ (OP ~ expression)* }

root = { SOI ~ expression ~ EOI }